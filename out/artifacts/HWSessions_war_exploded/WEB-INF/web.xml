<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    
    <servlet>
        <servlet-name>ValidForm</servlet-name>
        <servlet-class>HW_Sessions.ValidServlet</servlet-class>
    </servlet>
    

    <servlet-mapping>
        <servlet-name>ValidForm</servlet-name>
        <url-pattern>/valid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ValidWithCookieForm</servlet-name>
        <servlet-class>HW_Sessions.ValidWithCookieServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ValidWithCookieForm</servlet-name>
        <url-pattern>/validWithCookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>HW_Sessions.CreateServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    
</web-app>